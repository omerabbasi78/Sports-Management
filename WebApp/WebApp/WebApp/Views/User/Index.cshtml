@model List<Users>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model != null && Model.Count() > 0)
{

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-2">
                    <b>Name</b>
                </div>
                <div class="col-md-2">
                    <b>Username</b>
                </div>
            </div>
        </div>
    </div>

    foreach (var item in Model)
    {
        
        <a href="/Users/Delete/@item.Id" class="btn btn-outline pull-right animated tada" onclick="return confirm('Are you sure you want to delete?');">Block User</a>


        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayFor(model => item.Name)
                    </div>
                </div>
            </div>
        </div>
    }
}