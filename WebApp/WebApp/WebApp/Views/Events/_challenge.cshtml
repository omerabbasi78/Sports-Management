@model ChallengeEvent

@{
    ViewBag.Title = "Challenge Others";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
    <h3 class="modal-title">Challenge</h3>
</div>
@using (Html.BeginForm("Challenge", "Events", System.Web.Mvc.FormMethod.Post))
{
    <div class="modal-body">
        <div class="errormsg">

        </div>

        <div class="row">
            <div role="form" class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.EventName, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-7">
                        @Html.EditorFor(model => model.EventName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.VenueName, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-7">
                        @Html.EditorFor(model => model.VenueName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.StartDate, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-7">
                        @Html.EditorFor(model => model.StartDate, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EndDate, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-7">
                        @Html.EditorFor(model => model.EndDate, new { @class = "form-control" })
                    </div>
                </div>

                @*<div class="form-group">
                    @Html.LabelFor(model => model.limit_value, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-7">
                        @Html.EditorFor(model => model.limit_value, new { htmlAttributes = new { @class = "form-control", @id = "txtLimitVal", disabled = "disabled" } })
                    </div>
                </div>*@
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <input id="submit" type="button" value="Create" class="btn btn-primary btn-sm">
        <input type="button" value="Close" data-dismiss="modal" class="btn btn-white btn-sm">
    </div>
}